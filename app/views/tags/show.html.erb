<%= form_for(@tag, url: {controller: :tags, action: :update}) do |f| %>
  <%= f.hidden_field :gauge, id: :gauge %>
  <%= f.hidden_field :lat, id: :latitude %>
  <%= f.hidden_field :log, id: :longitude %>
  <%= f.submit %>
<% end %>

<script>
  $(function(){
    var time_count = <%= 0 %>;
    setInterval(function(){
      time_count += 5;
      $('#gauge').val(time_count);
      navigator.geolocation.watchPosition(function(position){
        $('#latitude').val(position.coords.latitude);
        $('#longitude').val(position.coords.longitude);
      });
    }, 1000);
  });
</script>